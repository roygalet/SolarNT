<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:title="SolarNT"
    tools:context="com.roygalet.www.solarnt.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weatherTextPostCodeSuburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <WebView
                android:id="@+id/weatherWebGuage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/appsImageWeather"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon_weather" />

                    <TextView
                        android:id="@+id/appsTextTemp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="89 F\n32 C"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/appsTextForeCast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <WebView
                android:id="@+id/weatherWebGuageRadiation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solar Radiation"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weatherImageRadiation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/clear" />

                    <TextView
                        android:id="@+id/weatherTextRadiation"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="89 F\n32 C"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/weatherRadiationUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Average kWh/sqm"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/weatherButtonApps"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/logo_apps_small"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:drawable/screen_background_light_transparent"
            app:srcCompat="@drawable/wide_logo_green_gold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@android:drawable/screen_background_light_transparent"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/logo_help" />

</FrameLayout>
