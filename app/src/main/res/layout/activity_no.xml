<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.roygalet.www.solarnt.NoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.roygalet.www.solarnt.YesActivity"
        android:background="@drawable/background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noImgLogo"
            android:src="@drawable/logo256xwide"
            android:contentDescription="@string/solarnt_logo_on_home_screen"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout12"
            android:gravity="center_horizontal"
            android:layout_below="@+id/noImgLogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">



            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noCardWeather"
                android:elevation="16dp"
                android:layout_margin="20dp"
                android:visibility="visible">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/noCardWeatherLinearLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/mainAutoTextSuburb"
                        android:id="@+id/relativeLayout"
                        android:visibility="visible"
                        android:background="@drawable/wetdry">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:weightSum="1"
                            android:id="@+id/linearLayout13"
                            android:layout_marginTop="52dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Rainfall"
                                android:id="@+id/textView"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Temperature"
                                android:id="@+id/textView6"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=" Solar Exposure"
                                android:id="@+id/textView7"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:weightSum="1"
                            android:layout_below="@+id/linearLayout13"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/linearLayout14"
                            android:visibility="visible" >

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0.0"
                                android:id="@+id/noRainFall"
                                android:textColor="#ffffff"
                                android:textSize="60sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0-0"
                                android:id="@+id/noTemp"
                                android:textColor="#ffffff"
                                android:textSize="60sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0.00"
                                android:id="@+id/noSolar"
                                android:textColor="#ffffff"
                                android:textSize="60sp"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:weightSum="1"
                            android:id="@+id/linearLayout15"
                            android:layout_below="@+id/linearLayout14"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" >

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="millimetres per month"
                                android:id="@+id/textView15"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Degrees Celcius"
                                android:id="@+id/textView16"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="kiloWatts per sqm daily"
                                android:id="@+id/textView17"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_below="@+id/linearLayout15"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:id="@+id/linearLayout16" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Source: Bureau of Meteorology (2007 - 2016)"
                                android:id="@+id/textView23"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="No Location Selected"
                            android:id="@+id/noSuburb"
                            android:textSize="40sp"
                            android:textAlignment="gravity"
                            android:width="200dp"
                            android:gravity="center"
                            android:textIsSelectable="false"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffffff" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Weather Statistics"
                        android:id="@+id/noTextWeather"
                        android:textSize="40sp"
                        android:textAlignment="gravity"
                        android:width="200dp"
                        android:gravity="center"
                        android:textIsSelectable="false" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/linearLayout12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp">


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/noCardCalculator"
            android:elevation="16dp"
            android:layout_below="@+id/linearLayout12"
            android:layout_alignLeft="@+id/noImgLogo"
            android:layout_alignStart="@+id/noImgLogo">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/noCardCalculatorLinearLayout">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/noImgCalculator"
                    android:src="@drawable/calc"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Calculator"
                    android:id="@+id/noTextCalculator"
                    android:textSize="40sp"
                    android:textAlignment="gravity"
                    android:width="200dp"
                    android:gravity="center"
                    android:textIsSelectable="false" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
